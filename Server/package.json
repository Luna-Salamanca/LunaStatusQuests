{
  "name": "lunastatusquests-backend",
  "version": "1.0.0",
  "sptVersion": "~3.11",
  "description": "LunaStatusQuests server mod for SPT 3.11 - displays quest status for all player profiles",
  "isBundleMod": false,
  "main": "src/LunaStatusQuestsBackend.js",
  "scripts": {
    "setup": "npm i",
    "build": "node ./build.mjs",
    "buildinfo": "node ./build.mjs --verbose",
    "build:client": "dotnet build ../Client/LunaStatusQuestsClient.csproj --configuration Release",
    "build:server": "node ./build.mjs",
    "build:all": "npm run build:client && npm run build:server",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "devDependencies": {
    "@types/node": "20.11",
    "@typescript-eslint/eslint-plugin": "7.2",
    "@typescript-eslint/parser": "7.2",
    "archiver": "^6.0",
    "eslint": "8.57",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "fs-extra": "11.2",
    "ignore": "^5.2",
    "prettier": "^3.2.5",
    "tsyringe": "4.8.0",
    "typescript": "5.8",
    "winston": "3.12",
    "async-mutex": "^0.5.0",
    "ws": "^8.17.0",
    "i18n": "^0.15.1",
    "@types/ws": "^8.5.10",
    "@types/i18n": "^0.13.12",
    "jsonc-parser": "^3.0.0",
    "@types/node-fetch": "^2.6.11"
  },
  "author": "Luna",
  "contributors": [],
  "license": "MIT"
}